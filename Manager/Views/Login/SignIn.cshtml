@model string

@{
    var url = $"/login/SignIn{Model}";
}


@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>تسجيل الدخول الى المنصة</title>
    @*<script src="~/Scripts/jquery-3.3.1.min.js"></script>*@
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <form action="@url" method="post">
        @Html.AntiForgeryToken()
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
                    <form id="frmLogin" class="login100-form validate-form" style="direction:rtl">
                        <span class="login100-form-title p-b-55" style="font-size:xx-large; font-weight:600;">
                            تسجيل الدخول
                        </span>

                        <div class="wrap-input100 validate-input m-b-16" data-validate="Valid email is required: ex@abc.xyz">
                            <input class="input100" type="text" name="userName" placeholder="اسم المستخدم " id="txtUsername">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <span class="lnr lnr-envelope"></span>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-16" data-validate="Password is required">
                            <input class="input100" type="password" name="password" placeholder=" كلمة المرور" id="txtPassword">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <span class="lnr lnr-lock"></span>
                            </span>
                        </div>

                        <div class="container-login100-form-btn p-t-25">
                            <button type="submit" id="btnLogin" class="login100-form-btn" style="background-color:#157C6A;font-size:large">
                                دخــول
                            </button>
                        </div>

                        <br /><br />
                              <div>
                                  <a class="col-md-12" style="color:black;text-decoration:underline" href="/login/SignUp"><p style="text-align: right; direction: rtl;cursor:pointer">تسجيل حساب جديد</p></a>

                              </div>

                        <br /><br /><br />
                        <div class="col-md-12" id="divError" style="color:crimson; font-size:larger; display:none;margin-top:-95px;margin-left:100px">اسم المستخدم او كلمة المرور غير صحيحة</div>


                        <div id="divLoader" style="width:30px;height:20px;display:none;margin-left:130px">
                            <img src="~/images/wait.gif" style="padding-right:110px" />
                        </div>
                        <div class="text-center w-full p-t-115">
                            <span class="txt1" style="color:black">

                            </span>
                            <a class="txt1 bo1 hov1" href="#" style="color:black">

                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </form>

        <script>
        $(document).ready(function () {
            debugger;
            $("#btnLogin").click(function () {
                $("#divLoader").css("display", "block");
            });
            
            var load = "@ViewBag.Loader";
            if (load != "") {
                $("#divLoader").css("display", "block");
            }
            var theUrl = "@ViewBag.Error";
            if (theUrl != "") {
                $("#divError").css("display", "block");
                $("#divLoader").css("display", "none");
            }

            var fullName = "@ViewBag.FullName";
            localStorage.setItem("Username", fullName);

            $(document).on('keypress', function (e) {
                if (e.which == 13) {
                    $("#btnLogin").click();
                }
            });


            $("#txtPassword").keyup(function (event) {
                if (event.keyCode === 13) {
                    $("#btnLogin").click();
                }
            });
        });
        </script>

        <!--===============================================================================================-->
        @*<script src="~/Login/vendor/jquery/jquery-3.2.1.min.js"></script>*@
        <!--===============================================================================================-->
        <script src="~/Login/vendor/bootstrap/js/popper.js"></script>
        <script src="~/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/Login/vendor/select2/select2.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/Login/js/main.js"></script>
</body>
</html>